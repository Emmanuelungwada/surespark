    <script>
        // Navigation functionality
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const mobileToggle = document.getElementById('mobileToggle');
            const mainNav = document.getElementById('mainNav');
            const form = document.getElementById('quoteForm');
            const successMessage = document.getElementById('successMessage');
            const reviewModal = document.getElementById('reviewModal');
            const openReviewModalBtn = document.getElementById('openReviewModal');
            const closeModalBtn = document.getElementById('closeModal');
            const reviewForm = document.getElementById('reviewForm');
            const ratingStars = document.querySelectorAll('.rating-input i');
            const ratingValue = document.getElementById('ratingValue');
            const termsModal = document.getElementById('termsModal');
            const openTermsModalBtn = document.getElementById('openTermsModal');
            const closeTermsModalBtn = document.getElementById('closeTermsModal');
            
            // Set active star rating
            ratingStars.forEach(star => {
                star.addEventListener('click', function() {
                    const rating = this.getAttribute('data-rating');
                    ratingValue.value = rating;
                    
                    ratingStars.forEach(s => {
                        if (s.getAttribute('data-rating') <= rating) {
                            s.classList.add('active');
                        } else {
                            s.classList.remove('active');
                        }
                    });
                });
                
                star.addEventListener('mouseover', function() {
                    const rating = this.getAttribute('data-rating');
                    ratingStars.forEach(s => {
                        if (s.getAttribute('data-rating') <= rating) {
                            s.style.color = '#FFD166';
                        } else {
                            s.style.color = '#ddd';
                        }
                    });
                });
                
                star.addEventListener('mouseout', function() {
                    const currentRating = ratingValue.value;
                    ratingStars.forEach(s => {
                        if (s.getAttribute('data-rating') <= currentRating) {
                            s.style.color = '#FFD166';
                        } else {
                            s.style.color = '#ddd';
                        }
                    });
                });
            });
            
            // Initialize stars as active
            ratingStars.forEach(star => {
                if (star.getAttribute('data-rating') <= 5) {
                    star.classList.add('active');
                }
            });
            
            // Function to show selected section
            function showSection(sectionId) {
                // Hide all sections
                document.querySelectorAll('.page-section').forEach(section => {
                    section.classList.remove('active');
                });
                
                // Show selected section
                document.getElementById(sectionId).classList.add('active');
                
                // Update active nav link
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-target') === sectionId) {
                        link.classList.add('active');
                    }
                });
                
                // Close mobile menu if open
                mainNav.classList.remove('active');
            }
            
            // Add click events to nav links
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetSection = this.getAttribute('data-target');
                    showSection(targetSection);
                    
                    // Scroll to top of the section
                    document.getElementById(targetSection).scrollIntoView({behavior: 'smooth'});
                });
            });
            
            // Mobile menu toggle
            mobileToggle.addEventListener('click', function() {
                mainNav.classList.toggle('active');
            });
            
            // Close mobile menu when clicking outside
            document.addEventListener('click', function(event) {
                if (!event.target.closest('nav') && !event.target.closest('#mobileToggle')) {
                    mainNav.classList.remove('active');
                }
            });
            
            // Open review modal
            openReviewModalBtn.addEventListener('click', function() {
                reviewModal.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
            
            // Close review modal
            closeModalBtn.addEventListener('click', function() {
                reviewModal.classList.remove('active');
                document.body.style.overflow = 'auto';
            });
            
            // Close modal when clicking outside
            reviewModal.addEventListener('click', function(e) {
                if (e.target === reviewModal) {
                    reviewModal.classList.remove('active');
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Open terms modal
            openTermsModalBtn.addEventListener('click', function(e) {
                e.preventDefault();
                termsModal.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
            
            // Close terms modal
            closeTermsModalBtn.addEventListener('click', function() {
                termsModal.classList.remove('active');
                document.body.style.overflow = 'auto';
            });
            
            // Close terms modal when clicking outside
            termsModal.addEventListener('click', function(e) {
                if (e.target === termsModal) {
                    termsModal.classList.remove('active');
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Review form submission
            reviewForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const reviewData = {
                    name: document.getElementById('reviewName').value,
                    rating: ratingValue.value,
                    title: document.getElementById('reviewTitle').value,
                    text: document.getElementById('reviewText').value,
                    date: new Date().toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    })
                };
                
                // Save review to localStorage
                try {
                    const existingReviews = JSON.parse(localStorage.getItem('suresparkReviews') || '[]');
                    existingReviews.push({
                        ...reviewData,
                        id: Date.now()
                    });
                    localStorage.setItem('suresparkReviews', JSON.stringify(existingReviews));
                    
                    // Show success message
                    alert('Thank you for your review! It has been submitted successfully.');
                    
                    // Reset form and close modal
                    reviewForm.reset();
                    ratingValue.value = '5';
                    ratingStars.forEach(star => {
                        if (star.getAttribute('data-rating') <= 5) {
                            star.classList.add('active');
                            star.style.color = '#FFD166';
                        }
                    });
                    
                    reviewModal.classList.remove('active');
                    document.body.style.overflow = 'auto';
                    
                } catch (error) {
                    alert('Thank you for your review! There was an error saving it.');
                }
            });
            
            // Contact form submission - UPDATED WITH EMAIL NOTIFICATION SYSTEM
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Show loading state
                const submitBtn = form.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                submitBtn.disabled = true;
                
                // Collect form data
                const formData = {
                    name: document.getElementById('name').value,
                    email: document.getElementById('email').value,
                    phone: document.getElementById('phone').value,
                    service: document.getElementById('service').value,
                    location: document.getElementById('location').value,
                    message: document.getElementById('message').value,
                    timestamp: new Date().toLocaleString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    })
                };
                
                // Save to localStorage
                try {
                    const existingQuotes = JSON.parse(localStorage.getItem('suresparkQuotes') || '[]');
                    existingQuotes.push({
                        ...formData,
                        id: Date.now()
                    });
                    localStorage.setItem('suresparkQuotes', JSON.stringify(existingQuotes));
                } catch (error) {
                    console.log('Local storage save failed:', error);
                }
                
                // Service type mapping
                const serviceTypes = {
                    'residential': 'Residential Cleaning',
                    'commercial': 'Commercial Cleaning',
                    'car': 'Car Cleaning',
                    'deep': 'Deep Cleaning',
                    'regular': 'Regular Maintenance',
                    'other': 'Other Service'
                };
                
                // Prepare email to CUSTOMER (automatic reply)
                const customerSubject = `Thank You for Your Quote Request - SureSpark Cleaning`;
                const customerBody = `
Dear ${formData.name},

Thank you for requesting a quote from SureSpark Cleaning!

We have received your inquiry for ${serviceTypes[formData.service] || formData.service} and are excited to help transform your space.

 Your Location: ${formData.location}
 Request Date: ${formData.timestamp}
 Your Message: "${formData.message}"

 **What Happens Next:**
1. Our team will review your request within 24 hours
2. We'll provide you with a personalized quote
3. We'll schedule a convenient time for your cleaning service

 **Need Immediate Assistance?**
You can reach us directly at:
 Phone: +44 7709 721192 (UK) or +234 810 844 4009 (Nigeria)
 WhatsApp: Available on both numbers
 Email: info@suresparkcleaning.com

 **Our Hours:**
Monday - Friday: 8am - 8pm
Saturday: 9am - 6pm
Sunday: 10am - 4pm
*(Weekend appointments available!)*

 **Why Choose SureSpark:**
 Professional, vetted cleaning specialists
 Eco-friendly cleaning products
 Satisfaction guaranteed
 We come to your location
 Flexible scheduling including weekends

Follow us on social media for cleaning tips and special offers:
 TikTok: @surespark_cleaning
 Instagram: @suresparkcleaning

We look forward to making your space sparkle!

Warm regards,
The SureSpark Cleaning Team
info@suresparkcleaning.com
+44 7709 721192 | +234 810 844 4009
www.suresparkcleaning.com

---
This is an automated response. We'll be in touch with your personalized quote soon!
                `;
                
                // Prepare email to YOU (business notification)
                const businessSubject = ` NEW QUOTE REQUEST: ${formData.name} - ${serviceTypes[formData.service] || formData.service}`;
                const businessBody = `
 **NEW QUOTE REQUEST - ACTION REQUIRED** 

=======================================
 **CLIENT INFORMATION:**
=======================================
 **Name:** ${formData.name}
 **Email:** ${formData.email}
 **Phone:** ${formData.phone}
 **Location:** ${formData.location}

=======================================
 **SERVICE REQUESTED:**
=======================================
**Service Type:** ${serviceTypes[formData.service] || formData.service}
**Cleaning Details:** ${formData.message}

=======================================
 **REQUEST DETAILS:**
=======================================
**Submission Time:** ${formData.timestamp}
**Service Area:** ${formData.location}

=======================================
 **ACTION REQUIRED:**
=======================================
1. **Send personalized quote** within 24 hours
2. **Follow up** via phone/email/WhatsApp
3. **Schedule appointment** if quote is accepted

=======================================
 **QUOTE ESTIMATION GUIDE:**
=======================================
 Residential: 50-150 based on size
 Commercial: 100-500 based on area
 Car Cleaning: 25-75 per vehicle
 Deep Cleaning: 1.5x standard rate
 Weekend appointments: +20%

=======================================
 **CONTACT CLIENT:**
=======================================
Email: ${formData.email}
Phone: ${formData.phone}
Location: ${formData.location}

=======================================
 **PRIORITY: HIGH**
=======================================
Client is expecting response within 24 hours.
Send automated reply has been sent to client.

---
**SureSpark Cleaning Lead Management System**
Generated: ${new Date().toLocaleString()}
                `;
                
                // Send emails
                try {
                    // Email to customer (automatic reply)
                    const customerMailto = `mailto:${formData.email}?subject=${encodeURIComponent(customerSubject)}&body=${encodeURIComponent(customerBody)}`;
                    
                    // Email to you (business notification)
                    const businessMailto = `mailto:info@suresparkcleaning.com?subject=${encodeURIComponent(businessSubject)}&body=${encodeURIComponent(businessBody)}`;
                    
                    // Open email client for business notification first
                    window.location.href = businessMailto;
                    
                    // Wait a moment then show success message
                    setTimeout(() => {
                        // Show success message
                        successMessage.style.display = 'block';
                        successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                        
                        // Reset form
                        form.reset();
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        
                        // Send automatic reply to customer (will work when user closes email client)
                        setTimeout(() => {
                            window.location.href = customerMailto;
                        }, 1000);
                        
                    }, 1500);
                    
                    // Hide success message after 10 seconds
                    setTimeout(() => {
                        successMessage.style.display = 'none';
                    }, 10000);
                    
                } catch (error) {
                    // Fallback method
                    alert('Thank you for your request! We have received your quote request and will contact you within 24 hours.');
                    form.reset();
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                    
                    // Simple mailto fallback
                    const fallbackMailto = `mailto:info@suresparkcleaning.com?subject=New%20Quote%20Request&body=Name:%20${encodeURIComponent(formData.name)}%0AEmail:%20${encodeURIComponent(formData.email)}%0APhone:%20${encodeURIComponent(formData.phone)}%0AService:%20${encodeURIComponent(formData.service)}%0ALocation:%20${encodeURIComponent(formData.location)}%0AMessage:%20${encodeURIComponent(formData.message)}`;
                    window.location.href = fallbackMailto;
                }
            });
            
            // Set initial active section
            const hash = window.location.hash.substring(1);
            const validSections = ['home', 'services', 'about', 'testimonials', 'contact'];
            
            if (validSections.includes(hash)) {
                showSection(hash);
            } else {
                showSection('home');
            }
            
            // Header scroll effect
            window.addEventListener('scroll', function() {
                const header = document.querySelector('header');
                if (window.scrollY > 100) {
                    header.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.1)';
                } else {
                    header.style.boxShadow = '0 5px 20px rgba(0, 0, 0, 0.05)';
                }
            });
            
            // Check for new quotes every 10 seconds (simulated)
            setInterval(function() {
                try {
                    const quotes = JSON.parse(localStorage.getItem('suresparkQuotes') || '[]');
                    const lastChecked = localStorage.getItem('lastQuoteCheck') || 0;
                    const newQuotes = quotes.filter(quote => quote.id > lastChecked);
                    
                    if (newQuotes.length > 0) {
                        // Update last checked timestamp
                        localStorage.setItem('lastQuoteCheck', Date.now());
                        console.log(`New quotes received: ${newQuotes.length}`);
                        // In a real system, you would show a notification here
                    }
                } catch (error) {
                    console.log('Quote check failed:', error);
                }
            }, 10000);
        });
    </script>
